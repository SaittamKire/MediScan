<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ScanningView">

        <attr name="scanbar_thickness" format="integer"/>
        <attr name="scan_animation_duration" format="integer"/>
        <attr name="scanbar_color" format="color"/>
        <attr name="scanbar_opacity" format="integer"/>
        <attr name="animation_orientation" format="enum">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
        <attr name="touchIconAnimationDuration" format="integer"/>
        <attr name="touchIconColor" format="color"/>
    </declare-styleable>
</resources>